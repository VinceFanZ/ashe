{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "allowJs": true,
    "module": "esnext",
    "target": "es2017",
    "sourceMap": true,
    "strictPropertyInitialization": false,
    "lib": [
      "dom",
      "es5",
      "es2015",
      "es2016"
    ],
    "baseUrl": "app",
    "paths": {
      "@libs/*": [
        "../libs/*"
      ],
      "@utils/*": [
        "../tools/utils/*"
      ]
    }
  },
  "exclude": [
    "./node_modules",
    "./dist"
  ]
}
